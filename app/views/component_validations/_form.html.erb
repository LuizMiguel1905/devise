<%= form_with(model: component_validation) do |form| %>
  <% if component_validation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(component_validation.errors.count, "error") %> prohibited this component_validation from being saved:</h2>

      <ul>
        <% component_validation.errors.each do |error| %>
          <li><%= error.full_message %></li>
